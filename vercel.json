{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/drive-download",
      "dest": "/api/drive-download.js"
    },
    {
      "src": "/api/drive-upload",
      "dest": "/api/drive-upload.js"
    },
    {
      "src": "/api/simple-api/(.*)",
      "dest": "/api/simple-api.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "GOOGLE_DRIVE_FOLDER_ID": "1tWt9sAMIQT7FdXlFFOTMCCT175nMAti6"
  }
}
